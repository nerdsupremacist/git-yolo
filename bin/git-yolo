#!/usr/bin/env node

var SimpleGit = require('simple-git');
var path = process.cwd();
var fs = require('fs');

var repository = SimpleGit(path);

Array.prototype.random = function () {
    var index = Math.floor(Math.random() * this.length);
    return this[index];
};

var emojis = [
    "ğŸ˜±",
    "ğŸ˜…",
    "ğŸ¤“ ",
    "ğŸ˜",
    "ğŸ’©",
    "ğŸ¤",
    "ğŸ‘Š",
    "ğŸ–•",
    "ğŸ™ƒ",
    "ğŸ˜‰",
    "â˜ ï¸",
    "ğŸ˜µ"
];

function yolo(file, callback) {
    if (file) {
        console.log("Change in: " + file);
    }
    var message = "YOLO!!! " + emojis.random() + (file ?  " Changed: " + file : "");
    repository
        .add('.')
        .commit(message)
        .push(['--force'], function() {
            console.log(message);
            if (callback) callback();
        });
}

function listen() {
    var options = {
        persistent: true,
        recursive: true
    };
    fs.watch(path, options, function(event, file) {
        if (file.indexOf('.git/') < 0) yolo(file);
    });
}

// This really works
console.log("Starting YOLO Mode");
yolo(undefined, listen);
